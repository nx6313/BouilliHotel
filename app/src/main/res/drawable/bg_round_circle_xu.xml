<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <gradient
                android:endColor="#6b6b6b"
                android:gradientRadius="6dp"
                android:startColor="#787878" />
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <gradient
                android:endColor="#b3cace"
                android:startColor="#b3cace" />
        </shape>
    </item>

</layer-list>