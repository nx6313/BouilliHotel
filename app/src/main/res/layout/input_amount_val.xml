<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loadingMain"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="210dp"
    android:paddingBottom="10dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:gravity="center|top">

        <EditText
            android:id="@+id/input_amount_tv"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:gravity="center"
            android:padding="8dp"
            android:background="@drawable/bg_round_circle"
            android:textColor="#1d1d1d"
            android:textSize="16sp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="输入选购数量"
            android:textColorHint="#2e2e2e"/>

        <Button
            android:id="@+id/input_amount_sure"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:text="确  定"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#f4f4f4"
            android:background="@drawable/edit_table_btn_style"/>
</LinearLayout>
